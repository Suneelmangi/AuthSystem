<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <title>@ViewData["Title"] - AuthSystem</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
           
            <div class="container-fluid">
                <a class="navbar-brand text-white" style="font-size: xx-large;" asp-area="" asp-controller="Home" asp-action="Index">AuthSystem</a>
                <a class="navbar-brand text-white col-lg-9 col-sm-9" asp-area="" asp-controller="Account" asp-action="Create"><u>Add Employee</u></a>
@*                <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Index">Employee</a>*@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="d-sm-inline-flex justify-content-between">

                    <partial name="_LoginPartial" />
                </div>
           </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
       @* <div class="container">
            &copy; 2023 - AuthSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        <div class="container">
            &copy; 2023 - AuthSystem - <a asp-area="" asp-controller="Account" asp-action="index">Index</a>
        </div>*@
    </footer>

 
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
