*@
@{
}
@using (Html.BeginForm("Search", "Account", FormMethod.Get))
{
    @Html.TextBox("Searching")<input type="submit" value="Search"/>
}


<table class="table table-striped">


    <thead>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Phone</th>
            <th>Address</th>

        </tr>
    </thead>
    <tbody>
        @if(Model.Count()==0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    No Match Any Document
                    </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Ename</td>
                    <td>@item.Egender</td>
                    <td>@item.Ephone</td>
                     <td>@item.Eaddress</td>


                </tr>
            }
        }
    </tbody>







</table>